<div class="my-box">

    @model Medicine_delivery.Models.MedicalTest

    @{
        ViewBag.Title = "Edit";
    }

    <h2>Upload Medical Test</h2>

    @using (Html.BeginForm("Edit", "MedicalTests", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)


            <div class="form-group btn-hide">
                @Html.LabelFor(model => model.MedicalExaminationId, "Medical Examination", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("MedicalExaminationId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MedicalExaminationId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group btn-hide">
                @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ImagePath, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" name="ImageFile" />
                </div>
            </div>

            @Html.HiddenFor(m => m.CaseId)
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add Medicial Test" class="btn btn-default blue-button" />
                    @Html.ActionLink("Back to List", "Index", new { caseId = Request.QueryString["caseId"] }, new { @class = "red-button" })
                </div>
            </div>
        </div>
    }

</div>